{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "[FW/BTLDR] Build",
            "command": "cd ./src && compiledb -d . make TARGETNAME=${input:target} LANG=C DEBUG=${input:debug}",
            "type": "shell",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "[FW/BTLDR] Clean",
            "command": "cd ./src && make clean",
            "type": "shell",
            "problemMatcher": []
        },
        {
            "label": "[Tests] Build",
            "command": "cd ./tests && make pre-build && make TARGETNAME=${input:target} TESTS=${input:test} && cp build/${input:target}/${input:test}.out build/test.out",
            "type": "shell",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "[Tests] Clean",
            "command": "cd ./tests && make clean",
            "type": "shell",
            "problemMatcher": []
        },
        {
            "label": "[Tests] Run compiled",
            "command": "cd ./tests && make exec",
            "type": "shell",
            "problemMatcher": []
        },
        {
            "label": "[VSCode] Update intellisense",
            "command": "./scripts/vscode_intellisense.sh ${input:target}",
            "type": "shell",
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "target",
            "type": "pickString",
            "default": "fw_opendeck",
            "description": "Select target for which to build:",
            "options": [
                "fw_opendeck",
                "fw_discovery",
                "fw_leonardo",
                "fw_mega",
                "fw_promicro",
                "fw_uno",
                "fw_teensy2pp",
                "fw_dubfocus",
                "fw_bergamot",
                "fw_16u2",
                "fw_8u2",
                "fw_mega6mux",
                "boot_opendeck",
                "boot_leonardo",
                "boot_promicro",
                "boot_mega",
                "boot_uno",
                "boot_teensy2pp",
                "boot_dubfocus",
                "boot_bergamot",
                "boot_16u2 VARIANT=VARIANT_MEGA",
                "boot_16u2 VARIANT=VARIANT_UNO",
                "boot_discovery"
            ]
        },
        {
            "id": "test",
            "type": "pickString",
            "default": "database",
            "description": "Select test to build:",
            "options": [
                "test_buttons",
                "test_database",
                "test_encoders",
                "test_odmidi",
                "test_potentiometer",
                "test_ringbuffer"
            ]
        },
        {
            "id": "debug",
            "type": "pickString",
            "default": "database",
            "description": "Build debug version? (0/no, 1/yes)",
            "options": [
                "0",
                "1"
            ]
        }
    ]
}