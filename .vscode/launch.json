{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Test",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/tests/build/test.out",
            "args": [],
            "stopAtEntry": false,
            "environment": [],
            "externalConsole": false,
            "linux": {
                "cwd": "${workspaceFolder}",
                "MIMode": "gdb"
            },
            "osx": {
                "cwd": "${workspaceFolder}",
                "MIMode": "lldb"
            },
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "[Tests] Build"
        },
        {
            "runToMain": true,
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "bmp",
            "cwd": "${workspaceRoot}",
            "executable": "./src/build/application/discovery/debug/discovery.elf",
            "name": "[STM32F407/FW] Debug (BMP)",
            "interface": "swd",
            "svdFile": "${workspaceFolder}/misc/STM32F40x.svd",
            "device": "STM32F407",
            "BMPGDBSerialPort": "/dev/ttyACM1",
            "targetId": 1,
            "preLaunchTask": "[FW/STM32FDiscovery/Debug] Build"
        },
        {
            "runToMain": true,
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "bmp",
            "cwd": "${workspaceRoot}",
            "executable": "./src/build/bootloader/discovery/debug/discovery.elf",
            "name": "[STM32F407/BTLDR] Debug (BMP)",
            "interface": "swd",
            "svdFile": "${workspaceFolder}/misc/STM32F40x.svd",
            "device": "STM32F407",
            "BMPGDBSerialPort": "/dev/ttyACM0",
            "targetId": 1,
            "preLaunchTask": "[BTLDR/STM32FDiscovery/Debug] Build"
        },
        {
            "runToMain": true,
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "bmp",
            "cwd": "${workspaceRoot}",
            "executable": "./src/build/fw_cardamom/debug/fw_cardamom.elf",
            "name": "[Cardamom/FW] Debug (BMP)",
            "interface": "swd",
            "svdFile": "${workspaceFolder}/misc/STM32F40x.svd",
            "device": "STM32F405",
            "BMPGDBSerialPort": "/dev/ttyACM0",
            "targetId": 1,
            "preLaunchTask": "[FW/Cardamom/Debug] Build"
        },
        {
            "runToMain": true,
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "bmp",
            "cwd": "${workspaceRoot}",
            "executable": "./src/build/boot_cardamom/debug/boot_cardamom.elf",
            "name": "[Cardamom/BTLDR] Debug (BMP)",
            "interface": "swd",
            "svdFile": "${workspaceFolder}/misc/STM32F40x.svd",
            "device": "STM32F405",
            "BMPGDBSerialPort": "/dev/ttyACM0",
            "targetId": 1,
            "preLaunchTask": "[BTLDR/Cardamom/Debug] Build"
        }
    ]
}