    "tasks": [
        {
            "label": "[Make] Database",
            "command": "make TESTS=database",
            "type": "shell",
            "problemMatcher": [
                "$gcc"
            ],
            "windows": {
                "options": {
                    "shell": {
                        "executable": "C://WINDOWS//System32//wsl.exe",
